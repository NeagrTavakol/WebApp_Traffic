@model WebApp_Traffic.Models.User

@{
    ViewData["Title"] = "Filter";
}

<partial name="_Notifications" />


<div class="container p-3">
    <div class="row pt-4">
       @* <div class="col-6">
            <h2 class="text-primary">
                List of Users
            </h2>
        </div>*@
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-outline-dark">
                اضافه کردن کاربر جدید
            </a>
        </div>
    </div>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="table-primary">
                <th>
                    نام
                </th>
                <th>
                    نام خانوادگی
                </th>
                <th>
                    کد ملی
                </th>
                <th>
                    کد یکتا
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td width="20%">
                        @Model.FirstName
                    </td>
                    <td width="20%">
                        @Model.LastName
                    </td>
                    <td width="30%">
                        @Model.National_Code
                    </td>
                    <td width="30%">
                        @Model.Id
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id">
                                ویرایش
                            </a>
                            <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id">
                                حذف
                            </a>
                        </div>
                    </td>
                </tr>
        </tbody>

    </table>
</div>

